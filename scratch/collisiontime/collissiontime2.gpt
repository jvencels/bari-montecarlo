reset

set term pngcairo
set output 'collissiontime2.png'

n = 100.
max = 3.0e-8
min = 0.0
width = (max-min)/n
hist(x,w)=w*floor(x/w)+w/2.0


set boxwidth width*.9
set xrange[min:max]
set yrange[0:]
set boxwidth width*0.9
set style fill solid 0.5 #fillstyle
set tics out nomirror

set xlabel 'Time'
set format x "%4.1s %cs"
set ylabel 'Count'
set format y "%4.0f"

set title 'Collision time, 100 000 samples at 300 eV'
plot 'collissiontime2.out' u (hist($1,width)):(1.0) smooth freq w boxes lc rgb"green" notitle

